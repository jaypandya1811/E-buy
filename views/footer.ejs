    new TomSelect("#color", {
    persist: false,
    plugins: ['remove_button'],
    createOnBlur: true,
    create: function(input) {
      const isValidHex = /^#([0-9A-F]{3}){1,2}$/i.test(input);
      if (isValidHex) {
        return { value: input, text: input };
      }
      alert("Invalid hex color code Use format like #FF5733");
      return false;
    },
    render: {
      item: function(data, escape) {
        if(escape(data.text).toLowerCase() == "#ffffff"){
        return `<div style="
          background:${escape(data.value)};
          color: black;
          padding:4px 8px;
          border-radius: 4px;
          border: 1px solid black;
        ">${escape(data.text)}</div>`;
        }
        return `<div style="
          background:${escape(data.value)};
          color:white;
          padding:4px 8px;
          border-radius: 4px;
        ">${escape(data.text)}</div>`;
    },
    }
    });

