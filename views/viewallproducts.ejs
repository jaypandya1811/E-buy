<%- include('header') %>
<div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form action="#">
                                <input type="text" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                    <li><a href="#">Men (20)</a></li>
                                                    <li><a href="#">Women (20)</a></li>
                                                    <li><a href="#">Bags (20)</a></li>
                                                    <li><a href="#">Clothing (20)</a></li>
                                                    <li><a href="#">Shoes (20)</a></li>
                                                    <li><a href="#">Accessories (20)</a></li>
                                                    <li><a href="#">Kids (20)</a></li>
                                                    <li><a href="#">Kids (20)</a></li>
                                                    <li><a href="#">Kids (20)</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseTwo">Branding</a>
                                    </div>
                                    <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__brand">
                                                <ul>
                                                    <li><a href="#">Louis Vuitton</a></li>
                                                    <li><a href="#">Chanel</a></li>
                                                    <li><a href="#">Hermes</a></li>
                                                    <li><a href="#">Gucci</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                    </div>
                                    <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__price">
                                                <ul>
                                                    <li><a href="#">$0.00 - $50.00</a></li>
                                                    <li><a href="#">$50.00 - $100.00</a></li>
                                                    <li><a href="#">$100.00 - $150.00</a></li>
                                                    <li><a href="#">$150.00 - $200.00</a></li>
                                                    <li><a href="#">$200.00 - $250.00</a></li>
                                                    <li><a href="#">250.00+</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseFour">Size</a>
                                    </div>
                                    <div id="collapseFour" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__size">
                                                <label for="xs">xs
                                                    <input type="radio" id="xs">
                                                </label>
                                                <label for="sm">s
                                                    <input type="radio" id="sm">
                                                </label>
                                                <label for="md">m
                                                    <input type="radio" id="md">
                                                </label>
                                                <label for="xl">xl
                                                    <input type="radio" id="xl">
                                                </label>
                                                <label for="2xl">2xl
                                                    <input type="radio" id="2xl">
                                                </label>
                                                <label for="xxl">xxl
                                                    <input type="radio" id="xxl">
                                                </label>
                                                <label for="3xl">3xl
                                                    <input type="radio" id="3xl">
                                                </label>
                                                <label for="4xl">4xl
                                                    <input type="radio" id="4xl">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseFive">Colors</a>
                                    </div>
                                    <div id="collapseFive" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__color">
                                                <label class="c-1" for="sp-1">
                                                    <input type="radio" id="sp-1">
                                                </label>
                                                <label class="c-2" for="sp-2">
                                                    <input type="radio" id="sp-2">
                                                </label>
                                                <label class="c-3" for="sp-3">
                                                    <input type="radio" id="sp-3">
                                                </label>
                                                <label class="c-4" for="sp-4">
                                                    <input type="radio" id="sp-4">
                                                </label>
                                                <label class="c-5" for="sp-5">
                                                    <input type="radio" id="sp-5">
                                                </label>
                                                <label class="c-6" for="sp-6">
                                                    <input type="radio" id="sp-6">
                                                </label>
                                                <label class="c-7" for="sp-7">
                                                    <input type="radio" id="sp-7">
                                                </label>
                                                <label class="c-8" for="sp-8">
                                                    <input type="radio" id="sp-8">
                                                </label>
                                                <label class="c-9" for="sp-9">
                                                    <input type="radio" id="sp-9">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseSix">Tags</a>
                                    </div>
                                    <div id="collapseSix" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__tags">
                                                <a href="#">Product</a>
                                                <a href="#">Bags</a>
                                                <a href="#">Shoes</a>
                                                <a href="#">Fashio</a>
                                                <a href="#">Clothing</a>
                                                <a href="#">Hats</a>
                                                <a href="#">Accessories</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                <div class="flex min-h-screen flex-col items-center bg-gray-50 p-4 w-230">
  <!-- Search and Filter Row -->
  <div class="mb-3 flex w-full flex-col items-center justify-between gap-2 md:flex-row">
    <!-- Search Bar -->
    <div class="flex w-full items-center md:w-auto">
      <input type="text" placeholder="Search by product name" class="w-full rounded-md border px-3 py-2 md:w-64 focus:outline-2 focus:outline-offset-2" />
      <button class="ml-2 border rounded-md p-2">
        <!-- Search Icon SVG -->
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65" stroke="currentColor" stroke-width="2"></line>
        </svg>
      </button>
    </div>
    <!-- Filter and Active -->
    <div class="flex items-center gap-3 mr-5">
      <label class="font-medium text-gray-700 text-lg">Filter by :</label>
      <select class="rounded border px-2 py-1">
        <option>Date</option>
        <option>Name</option>
        <option>Orders</option>
      </select>
     <label class="font-medium text-gray-700 text-lg" for="statusSwitch">Active :</label>
     <div class="form-check form-switch mb-1 ml-3">
     <input class="form-check-input" type="checkbox" id="statusSwitch" name="status" value="active" checked>
     </div>
    </div>
  </div>

  <!-- Products Section -->
  <div class="w-full max-w-4xl rounded-xl border bg-white p-4 shadow-sm">
    <div class="flex w-full justify-between">
    <h2 class="mb-4 text-lg font-semibold">Products</h2>
    <button class="mb-4 bg-black rounded-lg py-1 px-3">
        <a class="text-lg text-white font-semibold" href="/products/addproduct">+ Add product</a>
    </button>
    </div>
    <div class="space-y-4">
      <!-- Product Card 1 -->
    <% products.forEach((val) => { %>
      <div class="flex flex-col items-center rounded-lg border bg-white p-4 shadow-md md:flex-row">
        <!-- Image Placeholder -->
        <img class="h-38 w-38 rounded-md" src="/<%= val.coverimage %>" />
        <!-- Product Info -->
        <div class="flex flex-col gap-2 ml-4 flex-1 md:mt-0 md:ml-6">
          <div class="text-2xl font-bold"><a href="/products/viewproduct/<%= val._id %>" class="hover: underline underline-offset-1"><%= val.productname %></a>
        </div>
          <div class="">
          <div class="text-lg text-gray-600 font-medium">Price : &#8377;<%= val.price.toLocaleString() %></div>
          <div class="text-lg text-gray-600 font-medium">Main category : <%= val.maincategory.maincategory %></div>
          <div class="text-lg text-gray-600 font-medium">Category : <%= val.category.category %></div>
          <div class="text-lg text-gray-600 font-medium">Orders : 234</div>
          </div>
        </div>
        <!-- Action Buttons -->
        <div class="mt-3 ml-0 flex flex-row items-center gap-4 md:mt-0 md:ml-6 md:flex-col">
          <button class="bg-blue-500 w-12 h-12 flex items-center justify-center rounded-lg">
            <a href="/products/editproduct/<%= val._id %>">
            <svg xmlns="http://www.w3.org/2000/svg" 
                width="30" height="30" viewBox="0 0 24 24" fill="#fff">
                <path d="M5 19h1.425L16.2 9.225L14.775 7.8L5 17.575zm-1 2q-.425 0-.712-.288T3 20v-2.425q0-.4.15-.763t.425-.637L16.2 3.575q.3-.275.663-.425t.762-.15t.775.15t.65.45L20.425 5q.3.275.437.65T21 6.4q0 .4-.138.763t-.437.662l-12.6 12.6q-.275.275-.638.425t-.762.15zM19 6.4L17.6 5zm-3.525 2.125l-.7-.725L16.2 9.225z"/>
            </svg>
            </a>
            </button>

        <button class="bg-red-500 w-12 h-12 flex items-center justify-center rounded-lg" onclick="return confirm('Do you want to delete this product?')">
            <a href="/products/deleteproduct/<%= val._id %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24">
	        <path fill="#fff" d="M7 21q-.825 0-1.412-.587T5 19V6q-.425 0-.712-.288T4 5t.288-.712T5 4h4q0-.425.288-.712T10 3h4q.425 0 .713.288T15 4h4q.425 0 .713.288T20 5t-.288.713T19 6v13q0 .825-.587 1.413T17 21zM17 6H7v13h10zm-7 11q.425 0 .713-.288T11 16V9q0-.425-.288-.712T10 8t-.712.288T9 9v7q0 .425.288.713T10 17m4 0q.425 0 .713-.288T15 16V9q0-.425-.288-.712T14 8t-.712.288T13 9v7q0 .425.288.713T14 17M7 6v13z" />
            </svg>
            </a>
        </button>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
                </div>
                </div>
            </div>
</div>
<%- include('footer') %>